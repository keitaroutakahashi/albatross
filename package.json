{
  "name": "albatross",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.23.0",
  "scripts": {
    "dev": "pnpm db:up && pnpm db:migrate && pnpm generate:client && next dev",
    "build": "pnpm generate:client && next build",
    "start": "next start",
    "lint": "eslint",
    "db:up": "docker compose up -d --wait",
    "db:migrate": "prisma migrate dev",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset -f",
    "db:rebuild": "pnpm db:reset && pnpm db:seed",
    "db:studio": "prisma studio",
    "generate:client": "prisma generate"
  },
  "dependencies": {
    "@prisma/adapter-pg": "7.2.0",
    "@prisma/client": "7.2.0",
    "@tailwindcss/postcss": "4.1.18",
    "next": "16.1.1",
    "pg": "8.16.3",
    "postcss": "8.5.6",
    "prisma": "7.2.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwindcss": "4.1.18"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/node": "25.0.3",
    "@types/pg": "8.16.0",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "dotenv": "17.2.3",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  }
}
