{
  "name": "albatross",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a",
  "scripts": {
    "dev": "pnpm db:up && pnpm db:migrate && pnpm generate:client && next dev",
    "start": "next start",
    "build": "pnpm generate:client && next build",
    "lint": "biome check --write . && knip",
    "lint:ci": "biome check . && knip",
    "typecheck": "tsc --noEmit",
    "db:up": "docker compose up -d --wait",
    "db:migrate": "prisma migrate dev",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset -f",
    "db:rebuild": "pnpm db:reset && pnpm db:seed",
    "db:studio": "prisma studio",
    "db:migrate:preview": "dotenv -e .env.preview -- prisma migrate deploy",
    "db:migrate:production": "dotenv -e .env.production -- prisma migrate deploy",
    "generate:client": "prisma generate",
    "generate:next-type": "next typegen"
  },
  "dependencies": {
    "@formkit/tempo": "1.0.0",
    "@prisma/adapter-pg": "7.3.0",
    "@prisma/client": "7.3.0",
    "@tailwindcss/postcss": "4.1.18",
    "next": "16.1.4",
    "pg": "8.17.2",
    "postcss": "8.5.6",
    "prisma": "7.3.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwindcss": "4.1.18"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.12",
    "@testing-library/react": "16.3.2",
    "@types/node": "25.0.10",
    "@types/pg": "8.16.0",
    "@types/react": "19.2.9",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.2",
    "dotenv": "17.2.3",
    "dotenv-cli": "11.0.0",
    "knip": "5.82.1",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
